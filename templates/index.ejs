<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %>'s Portfolio</title>
    <link rel="stylesheet" href="assets/style.css">
</head>
<body>
    <header>
        <div class="container">
            <h1><%= name %></h1>
            <p class="bio"><%= bio %></p>
            <div class="contact">
                <% if (email) { %>
                    <a href="mailto:<%= email %>">Email</a>
                <% } %>
                <% if (linkedinUrl) { %>
                    <a href="<%= linkedinUrl %>" target="_blank">LinkedIn</a>
                <% } %>
                <a href="https://github.com/<%= githubUsername %>" target="_blank">GitHub</a>
            </div>
        </div>
    </header>

    <section class="skills">
        <div class="container">
            <h2>Skills & Technologies</h2>
            <div class="skills-grid">
                <% 
                const categories = {
                    'Programming Languages': skills.filter(skill => ['JavaScript', 'TypeScript', 'Python', 'Java', 'C++', 'C#', 'Ruby', 'Go', 'Swift', 'Kotlin', 'Rust'].includes(skill)),
                    'Frontend Development': skills.filter(skill => ['React', 'Angular', 'Vue.js', 'Next.js', 'HTML5', 'CSS3', 'Sass/SCSS', 'Tailwind CSS', 'Material UI'].includes(skill)),
                    'Backend Development': skills.filter(skill => ['Node.js', 'Django', 'Flask', 'Spring Boot', 'Express.js', 'FastAPI', 'GraphQL'].includes(skill)),
                    'Mobile Development': skills.filter(skill => ['React Native', 'Flutter', 'iOS Development', 'Android Development'].includes(skill)),
                    'Database': skills.filter(skill => ['MongoDB', 'PostgreSQL', 'MySQL', 'Redis', 'Firebase'].includes(skill)),
                    'Cloud & DevOps': skills.filter(skill => ['AWS', 'Google Cloud', 'Azure', 'Docker', 'Kubernetes', 'Jenkins', 'GitHub Actions', 'Terraform'].includes(skill)),
                    'AI & Data Science': skills.filter(skill => ['Machine Learning', 'Deep Learning', 'TensorFlow', 'PyTorch', 'Computer Vision', 'NLP', 'Data Analysis', 'Pandas', 'Scikit-learn'].includes(skill)),
                    'Other Technologies': skills.filter(skill => ['Git', 'RESTful APIs', 'Linux', 'Agile', 'CI/CD', 'Testing', 'Microservices', 'System Design', 'WebSockets'].includes(skill))
                };
                
                Object.entries(categories).forEach(([category, categorySkills]) => {
                    if (categorySkills.length > 0) {
                %>
                    <div class="skill-category">
                        <h3><%= category %></h3>
                        <div class="skill-tags">
                            <% categorySkills.forEach(skill => { %>
                                <span class="skill-tag"><%= skill %></span>
                            <% }) %>
                        </div>
                    </div>
                <% }}) %>
            </div>
        </div>
    </section>

    <section class="projects">
        <div class="container">
            <h2>Projects</h2>
            <div class="projects-grid">
                <% repos.forEach(repo => { %>
                    <div class="project-card">
                        <h3><%= repo.name %></h3>
                        <p><%= repo.description || 'No description available' %></p>
                        <div class="project-meta">
                            <% if (repo.language) { %>
                                <span class="language"><%= repo.language %></span>
                            <% } %>
                            <span class="stars">‚≠ê <%= repo.stars %></span>
                        </div>
                        <a href="<%= repo.url %>" target="_blank" class="project-link">View Project</a>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>Generated with Dev Portfolio Generator</p>
        </div>
    </footer>
</body>
</html>